<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Contact List</h2>

            <a href="/contact/add" class="btn btn-primary mb-1">Add Contact</a>

            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role='alert'><%= msg %> </div>
              <% } %>

        </div>
    </div>
</div>

<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Phone</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
        <% if (contacts.length < 1) { %>
            <tr>
                <td colspan="4">Data not avaliable</td>    
            </tr>
            
        <% } else { %> 
        <% let no=1 %> 
        <% contacts.forEach(k => { %>
            <tr>
                <th scope="row"><%= no++ %> </th>
                <td><%= k.nama %> </td>
                <td><%= k.noHP %> </td>
                <td><%= k.email %> </td>
                <td>
                    <a href="/contact/<%= k.nama %> " class="btn btn-success badge rounded-pill">Detail</a>
                </td>
              </tr>
        <% }) %>
        <% } %>
    </tbody>
  </table>
